<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".tela_seletor_cadastro">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/fundoptsup"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/layer_stroke"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"></ImageView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:background="@drawable/retangle_seletor"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:src="@drawable/passeador1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4">

    </ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Passeador"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Passeadores são os apaixonados por animais, devidamente cadastrados e capacitados para proporcionar passeios seguros e cheios de alegria."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cad_passeador"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Cadastre-se"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imagestroketutor"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layer_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cad_passeador"></ImageView>

    <ImageView
        android:id="@+id/imagebacktutor"
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:background="@drawable/retangle_seletor"
        app:layout_constraintBottom_toBottomOf="@+id/imagestroketutor"
        app:layout_constraintEnd_toEndOf="@+id/imagestroketutor"
        app:layout_constraintStart_toStartOf="@+id/imagestroketutor"
        app:layout_constraintTop_toTopOf="@+id/imagestroketutor" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:src="@drawable/tutor2"
        app:layout_constraintBottom_toBottomOf="@+id/imagebacktutor"
        app:layout_constraintEnd_toEndOf="@+id/imagebacktutor"
        app:layout_constraintStart_toStartOf="@+id/imagebacktutor"
        app:layout_constraintTop_toTopOf="@+id/imagebacktutor"></ImageView>


    <TextView
        android:id="@+id/textViewtutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Tutor"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagestroketutor" />

    <TextView
        android:id="@+id/texttutor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:text="Os tutores são os carinhosos donos dos pets, responsáveis por contratar os passeadores para levar seus amiguinhos de quatro patas em passeios divertidos e saudáveis"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtutor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cad_tutor"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_btn_cadastro"
        android:text="Cadastre-se"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texttutor" />
</androidx.constraintlayout.widget.ConstraintLayout>